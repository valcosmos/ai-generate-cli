{
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "target": "es2016",                                  
    "module": "NodeNext",
    "moduleResolution": "nodenext",                                
    "declaration": true,
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,                                 
    "sourceMap": true,
  },
  "include": ["src/**/*.ts"]
}
